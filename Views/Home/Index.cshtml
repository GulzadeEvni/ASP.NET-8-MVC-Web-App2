@using StarWars.Models
@{
    var viewModel = ViewBag.NavbarViewModel as NavbarViewModel;
    var contentviewModel = ViewBag.TopContentViewModel as TopContentViewModel;
}
<div class="slider-container">
    @if (contentviewModel != null && contentviewModel.Contents != null && contentviewModel.Contents.Count > 0)
    {
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < contentviewModel.Contents.Count; i++)
                {
                    var item = contentviewModel.Contents[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")"> <!-- ilk öğeyi active yap diğerlerini ardına ekle.--> 
                        <img src="~/img/@item.ImgUrl" class="d-block slider-image" alt="@(!string.IsNullOrWhiteSpace(item.AltText) ? item.AltText : "Slider Image")">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
    else
    {
        <p>No content available for the slider.</p>
    }
</div>
